<!-- app/views/influencers/_modal.html.erb -->
<div data-modal-target="modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4">
  <div class="bg-white rounded-lg shadow-lg w-full max-w-md p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-bold">Agregar Influencer</h2>
      <button data-action="click->modal#close" class="text-gray-500 hover:text-gray-700">
        &times;
      </button>
    </div>

    <%= form_with model: influencer, local: true, class: "space-y-4" do |form| %>
      <div>
        <%= form.label :name, "Nombre", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, class: "mt-1 block w-full border rounded-lg p-2" %>
      </div>

      <div>
        <%= form.label :platform, "Plataforma", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :platform, class: "mt-1 block w-full border rounded-lg p-2" %>
      </div>

      <div>
        <%= form.label :followers, "Seguidores", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :followers, class: "mt-1 block w-full border rounded-lg p-2" %>
      </div>

      <div>
        <%= form.label :profile_url, "URL del perfil", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :profile_url, class: "mt-1 block w-full border rounded-lg p-2" %>
      </div>

      <div class="flex justify-end">
        <%= form.submit "Guardar", class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600" %>
      </div>
    <% end %>
  </div>
</div>