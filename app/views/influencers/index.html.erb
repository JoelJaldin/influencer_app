<div data-controller="modal" class="max-w-6xl mx-auto mt-10 bg-gradient-to-br from-purple-50 to-blue-50 p-8 rounded-xl shadow-2xl flex flex-col space-y-8">
  <!-- Título del listado de influencers -->
  <div class="text-center mb-8">
    <h1 class="text-4xl font-bold bg-gradient-to-r from-purple-600 to-blue-500 bg-clip-text text-transparent font-poppins inline-flex items-center space-x-3">
      <svg class="w-10 h-10 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
      </svg>
      <span>Listado de Influencers</span>
    </h1>
    <div class="w-20 h-1 bg-purple-600 mx-auto mt-3 rounded-full"></div>
  </div>

  <!-- Lista de influencers -->
  <ul id="influencers-list" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <%= render partial: "influencers/partials/influencer", collection: @influencers, as: :influencer %>
  </ul>

  <!-- Botón para abrir el modal -->
  <div class="text-center">
    <button data-action="click->modal#open" class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-8 py-4 rounded-xl hover:from-blue-600 hover:to-purple-700 transition duration-300 flex items-center justify-center space-x-3 font-poppins">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      <span class="text-lg">Agregar Influencer</span>
    </button>
  </div>

  <!-- Modal -->
  <%= render "influencers/partials/modal" %>
</div>