<!-- app/views/influencers/partials/_influencer.html.erb -->
<li id="<%= dom_id(influencer) %>" class="bg-gradient-to-br from-purple-50 to-blue-50 rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300 transform hover:-translate-y-1 h-full flex flex-col">
  <div class="p-6 flex flex-col items-center text-center flex-grow">
    <!-- Contenedor para la informaciÃ³n con altura mÃ­nima -->
    <div class="flex-grow space-y-3 min-h-[80px]">
      <h2 class="text-xl font-bold text-gray-900 font-poppins leading-tight"><%= influencer.name %></h2>

      <p class="text-sm text-gray-700 font-poppins">
        <%= influencer.platform %> - <%= number_with_delimiter(influencer.followers) %> seguidores
      </p>

      <!-- Contenedor para la imagen rectangular vertical -->
      <div class="mt-3 w-32 h-48 mx-auto overflow-hidden rounded-lg">
        <% if influencer.image.present? %>
          <%= image_tag influencer.image, alt: influencer.name, class: "w-full h-full object-cover" %>
        <% else %>
          <div class="w-full h-full bg-gray-200 flex items-center justify-center">
            <p class="text-gray-500 text-xs">No image</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Contenedor para los botones alineados abajo -->
  <div class="mt-auto w-full p-3">
    <a href="<%= influencer.profile_url %>" target="_blank" class="w-full flex justify-center items-center space-x-2 px-4 py-2 bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-xl hover:from-blue-600 hover:to-purple-700 transition duration-300 font-poppins">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
      </svg>
      <span class="text-sm">Ver perfil</span>
    </a>

    <% if influencer.persisted? %>
      <%= button_to influencer_path(influencer), method: :delete, data: { turbo_confirm: "Â¿EstÃ¡s seguro?" }, class: "mt-3 w-full flex justify-center items-center space-x-2 px-3 py-1.5 bg-gradient-to-r from-red-500 to-pink-600 text-white rounded-lg hover:from-red-600 hover:to-pink-700 transition duration-300 font-poppins cursor-pointer hover:scale-105 hover:brightness-110" do %>
        <span class="text-sm">ğŸ—‘ Eliminar</span>
      <% end %>
    <% end %>
  </div>
</li>