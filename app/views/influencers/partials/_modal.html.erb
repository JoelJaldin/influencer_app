<div id="modal" data-modal-target="modal" class="hidden fixed inset-0 flex items-center justify-center p-4">
  <!-- Fondo desenfocado -->
  <div class="absolute inset-0 bg-black/60 backdrop-blur-md"></div>

  <!-- Contenido del modal -->
  <div class="relative bg-gradient-to-br from-purple-50 to-blue-50 rounded-2xl shadow-2xl w-full max-w-md p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold text-gray-900 font-poppins">Agregar Influencer</h2>
      <button data-action="click->modal#close" class="text-gray-500 hover:text-gray-700 transition duration-300 w-8 h-8 flex items-center justify-center rounded-full hover:bg-white/50">
        &times;
      </button>
    </div>

    <%= form_with model: Influencer.new, 
                  class: "space-y-4", 
                  multipart: true,
                  data: { modal_target: "form" } do |form| %> <!-- Agrega data-modal-target="form" -->
      <div class="space-y-4">
        <div>
          <%= form.label :name, "Nombre", class: "block text-sm font-semibold text-gray-700 mb-1 font-poppins" %>
          <%= form.text_field :name, required: true, 
              class: "w-full px-4 py-2 rounded-xl border-0 bg-white/70 
                     focus:outline-none focus:ring-2 focus:ring-purple-500 focus:bg-white 
                     shadow-sm transition duration-300 font-poppins" %>
        </div>

        <div>
          <%= form.label :platform, "Plataforma", class: "block text-sm font-semibold text-gray-700 mb-1 font-poppins" %>
          <%= form.text_field :platform, required: true, 
              class: "w-full px-4 py-2 rounded-xl border-0 bg-white/70 
                     focus:outline-none focus:ring-2 focus:ring-purple-500 focus:bg-white 
                     shadow-sm transition duration-300 font-poppins" %>
        </div>

        <div>
          <%= form.label :followers, "Seguidores", class: "block text-sm font-semibold text-gray-700 mb-1 font-poppins" %>
          <%= form.number_field :followers, required: true, min: 0, 
              class: "w-full px-4 py-2 rounded-xl border-0 bg-white/70 
                     focus:outline-none focus:ring-2 focus:ring-purple-500 focus:bg-white 
                     shadow-sm transition duration-300 font-poppins" %>
        </div>

        <div>
          <%= form.label :profile_url, "URL del perfil", class: "block text-sm font-semibold text-gray-700 mb-1 font-poppins" %>
          <%= form.url_field :profile_url, required: true, 
              class: "w-full px-4 py-2 rounded-xl border-0 bg-white/70 
                     focus:outline-none focus:ring-2 focus:ring-purple-500 focus:bg-white 
                     shadow-sm transition duration-300 font-poppins" %>
        </div>

        <div>
          <%= form.label :image, "Imagen", class: "block text-sm font-semibold text-gray-700 mb-1 font-poppins" %>
          <%= form.file_field :image, 
              class: "w-full px-4 py-2 rounded-xl border-0 bg-white/70 
                     focus:outline-none focus:ring-2 focus:ring-purple-500 focus:bg-white 
                     shadow-sm transition duration-300 font-poppins" %>
        </div>
      </div>

      <div class="flex justify-end space-x-4 pt-4 border-t border-gray-200">
        <button type="button" 
                data-action="click->modal#close" 
                class="px-6 py-2 text-gray-700 bg-white/80 hover:bg-white rounded-xl
                       font-medium transition duration-300 font-poppins shadow-sm hover:shadow-md">
          Cancelar
        </button>
        <%= form.submit "Guardar", 
            class: "px-6 py-2 bg-gradient-to-r from-blue-500 to-purple-600 
                   text-white rounded-xl hover:from-blue-600 hover:to-purple-700 
                   font-medium shadow-md hover:shadow-lg transition duration-300 font-poppins" %>
      </div>
    <% end %>
  </div>
</div>
